# База данных (если потребуется собственное хранилище)
DATABASE_URL=postgresql+asyncpg://user:password@db:5432/remnawave_admin

# === Observability ===
SENTRY_DSN=
OTEL_EXPORTER_OTLP_ENDPOINT=

# === Misc ===
LOG_LEVEL=info
